<main>
  <%= form_with model: @post, url: user_posts_path, method: :post, local: true, scope: :post do |f| %>
    <div class='new_post_form'>
      <div class='field'>
        <%= f.label :title %>
        <%= f.text_field :title %>
      </div>
      <div class='field'>
        <%= f.label :text %>
        <%= f.text_area :text %>
      </div>
      <%= f.submit 'Create Post' %>
    </div>
  <% end %>
</main>
