<p>
  <%=comment.author.name%> : <%=comment.text%>
</p>
<% if can? :destroy, comment %>
  <button>
    <%= link_to 'Delete comment',user_post_comment_path(@user, comment.post, comment.id) , method: :delete, data: {
                    turbo_confirm: "Do you want to delete this comment?"
                  } %>
  </button>
<% end %>
